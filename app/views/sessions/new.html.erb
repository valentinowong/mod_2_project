<%= form_for :user, html: {class: 'form-signin'} do |f| %>

    <h2 class="form-signin-heading">Please sign in</h2>
    <%= f.label :name, {class: "sr-only"} %>
    <%= f.text_field :name,{ id: "inputEmail", class: "form-control", placeholder: "Name"}%><br>

    <%= f.label :password, {class: "sr-only"} %>
    <%= f.password_field :password, { id: "inputPassword", class: "form-control", placeholder: "Password"} %><br>

    <%= f.submit "Sign in", {class: "btn btn-lg btn-primary btn-block"} %>

<% end %>

<%= link_to "Or Sign Up", new_user_path %>