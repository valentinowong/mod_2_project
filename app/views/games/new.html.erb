
<h1 class="center">Create a new game</h1>
<%= form_for @game do |f| %>
<div class="form-group row">
<%= f.label :name, class: "col-sm-2 col-form-label col-form-label-lg" %>
<div class="col-sm-10">
<%= f.text_field :name, class: "form-control form-control-lg", id: "colFormLabelLg", placeholder: "col-form-label-lg" %><br>
</div>
</div>
<%= f.label :description %>
<%= f.text_area :description %><br>
<h4>Create 7 missions for your scavenger hunt!</h4>
<% count = 0 %>
<% 7.times do %>
    <% count += 1 %>
    <h5>Mission #<%= count %></h5>
  <%= f.fields_for :missions do |miss| %>
    <%= miss.label :name %>
    <%= miss.text_field :name %><br>
    <%= miss.label :description %>
    <%= miss.text_area :content %><br>
    <% end %>
<%end %>
<%= f.submit %>
<% end %>


