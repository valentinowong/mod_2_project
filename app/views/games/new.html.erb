
<h1>Create a new game</h1>
<%= form_for @game do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :description %>
<%= f.text_field :description %><br>
<% 7.times do %>
  <%= f.fields_for :missions do |miss| %>
    <h6>create mission </h6>
    <%= miss.label :name %>
    <%= miss.text_field :name %><br>
    <%= miss.label :content %>
    <%= miss.text_field :content %><br>
    <% end %>
<%end %>
<%= f.submit %>
<% end %>

